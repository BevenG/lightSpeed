<div class="container m-55">
  <div class="new-starship">
    <%= simple_form_for @starship do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :top_speed %>
      <%= f.input :upgrades %>
      <%= f.input :mass %>
      <%= f.input :weapons %>
      <%= f.input :photo, as: :file %>
      <div class="form-actions">
        <%= f.button :submit, "Submit", class: "btn-primary" %>
      </div>
    <% end %>
    </div>
</div>
